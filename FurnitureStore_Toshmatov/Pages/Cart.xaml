<Page x:Class="FurnitureStore_Toshmatov.Pages.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Корзина">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#7F000000">
            <Button Content="← Назад" Click="Back_Click" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Margin="10,0,0,0" Width="80" Height="30"/>

            <Label Content="Корзина покупок" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Grid>
        <ListView x:Name="lvCart" Grid.Row="1" Margin="10,10,10,0" Height="330" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Товар" Width="200" DisplayMemberBinding="{Binding Product.Name}"/>
                    <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding Product.Price, StringFormat={}{0:C0}}"/>
                    <GridViewColumn Header="Кол-во" Width="80" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Сумма" Width="100" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C0}}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1" Background="#FFD3D3D3" Margin="10,340,10,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblTotal" Content="Итого: 0 руб." Grid.Column="0" Margin="10,15,10,14" 
                   FontSize="16" FontWeight="Bold"/>

            <Button Content="Оформить заказ" Grid.Column="1" Margin="10" 
                    Click="Checkout_Click" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Page>